{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "noEmit": false,
    "outDir": "dist/app",
    "types": ["vite/client"]
  },
  "include": [
    "src",
    "src/**/*.json",
    "jest.config.mjs"
  ]
}
